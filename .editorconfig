# 修改配置后重启编辑器
# 文档: https://editorconfig.org/

# 当前为最顶层 editorconfig
root = true

# 全局规则
[*]
charset = utf-8                   # 设置文件字符集为 utf-8
indent_style = space              # 缩进风格：tab、space（建议 space，会继承给 prettier）
indent_size = 2                   # 缩进尺寸（会继承给 prettier）
end_of_line = lf                  # 换行符类型：lf、cr、crlf
trim_trailing_whitespace = true   # 是否删除一行中的前后空格
insert_final_newline = true       # 是否在文件末尾插入空白行
spaces_around_operators = true    # 是否运算符两边有空格

# 脚本规则
[*.js]
quote_type = single               # 字符串使用单引号
[*.ts]
quote_type = single               # 字符串使用单引号
[*.vue]
quote_type = single               # 字符串使用单引号

# markdown 规则
[*.md]
max_line_length = off             # 最大行长度
trim_trailing_whitespace = false  # 是否删除一行中的前后空格
insert_final_newline = false      # 是否在文件末尾插入空白行
